<!--                   </platforms> -->
<!--                 </program> -->
<!--                 <program> -->
<!--                   <mainClass>org.ginga.toolbox.command.BackgroundDatabaseIngestorCmd</mainClass> -->
<!--                   <id>ingest_background_db.sh</id> -->
<!--                   <platforms> -->
